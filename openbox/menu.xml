<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Web browser">
    <action name="Execute"><execute>x-www-browser</execute></action>
  </item>
  <item label="File manager">
    <action name="Execute"><execute>pcmanfm</execute></action>
  </item>
  <item label="Terminal">
    <action name="Execute"><execute>x-terminal-emulator</execute></action>
  </item>
  <item label="Calculator">
    <action name="Execute"><execute>qalculate-gtk</execute></action>
  </item>
  <!-- This requires the presence of the 'menu' package to work -->
  <menu id="/Debian" />
  <separator />
  <menu id="client-list-menu" />
  <separator />
  <menu id="openbox-manu" label="Openbox">
    <item label="Appearance">
      <action name="Execute"><execute>lxappearance</execute></action>
    </item>
    <item label="ObConf">
      <action name="Execute"><execute>obconf</execute></action>
    </item>
    <item label="Reconfigure">
      <action name="Reconfigure" />
    </item>
    <item label="Restart">
      <action name="Restart" />
    </item>
  </menu>
  <separator />
  <menu id="exit-menu" label="Exit">
    <item label="Lock">
      <action name="Execute">
        <command>dm-tool lock</command>
      </action>
    </item>
    <item label="Log Out">
      <action name="Execute">
        <prompt>Are you sure you want to exit?</prompt>
        <command>openbox --exit</command>
      </action>
    </item>
    <item label="Suspend">
      <action name="Execute">
        <command>systemctl suspend</command>
      </action>
    </item>
    <item label="Hibernate">
      <action name="Execute">
        <command>systemctl hibernate</command>
      </action>
    </item>
    <item label="Restart">
     <action name="Execute">
        <prompt>Are you sure you want to reboot?</prompt>
       <command>systemctl reboot</command>
     </action>
    </item>
    <item label="Shutdown">
      <action name="Execute">
        <prompt>Are you sure you want to shotdown?</prompt>
        <command>systemctl poweroff</command>
      </action>
    </item>
  </menu>
</menu>

</openbox_menu>
