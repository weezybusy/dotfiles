filetype plugin indent on
set encoding=utf8
set fileformat=unix
set hidden
set wildmenu
set showcmd
set ignorecase
set smartcase
set incsearch
set nostartofline
set number
set relativenumber
set textwidth=79
set colorcolumn=+1
set nowrap
set ruler
set showmatch
set autoindent
set cindent
set expandtab
au FileType html,xml,javascript,css,json setlocal ts=2 et sts=2 sw=2
au FileType python setlocal ts=4 et sts=4 sw=4
set autowrite
set autoread
set noswapfile 
set foldmethod=indent
set foldlevel=1
set foldnestmax=1
set list
set t_Co=256
syntax on
set background=dark
colorscheme gruvbox
